<Window x:Class="Nemo.Manager.UpadteProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nemo.Manager"
        mc:Ignorable="d"
        Title="UpadteProduct" Height="450" Width="800"
        Closing="Window_Closing"
        >
    <Border Background="{StaticResource WordBlueBrush}"
            Margin="14">
        <Grid >
            <!--To prove the emoji background, -->
            <Grid.Background>
                <ImageBrush TileMode="Tile"
                            ViewportUnits="Absolute"
                            Viewport="0 0 500 500"
                            ImageSource="/Images/Backgrounds/emoji-background.png" />
            </Grid.Background>
            <StackPanel>
                <Grid>
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Name: " 
                               Grid.Column="0"
                               FontSize="20" 
                               Margin="8 8 8 8" 
                               Foreground="White" />

                            <!--First name value-->
                            <TextBox x:Name="name" 
                             Grid.Column="1" 
                             FontSize="20"
                             Margin="8 8 8 8"
                             Foreground="White"
                             Background="Transparent"/>

                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Cost: " 
                               Grid.Column="0"
                               FontSize="20" 
                               Margin="8 8 8 8" 
                               Foreground="White" />

                            <!--First name value-->
                            <TextBox x:Name="cost" 
                             Grid.Column="1" 
                             FontSize="20"
                             Margin="8 8 8 8"
                             Foreground="White"
                             Background="Transparent"
                             PreviewTextInput="MaskNumericInput" 
                            DataObject.Pasting="MaskNumericPaste"
                                     />
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="To work in production line: " 
                               Grid.Column="0"
                               FontSize="20" 
                               Margin="8 8 8 8" 
                               Foreground="White" />

                            <!--First name value-->
                            <ComboBox x:Name="lines" 
                                 Grid.Column="3"
                                FontSize="20" 
                                Margin="8 8 8 8"
                                DisplayMemberPath="Name"
                                SelectedValuePath="ID"
                                      />
                        </Grid>
                    </StackPanel>
                </Grid>



                <Grid Margin="8 16 8 8">
                    <Grid.ColumnDefinitions>
                        <!--Cancel-->
                        <ColumnDefinition Width="*"/>
                        <!--Remove-->
                        <ColumnDefinition Width="*"/>
                        <!--Update-->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Cancel-->
                    <Button Click="Cancel" 
                            Grid.Column="0" 
                            Content="Cancel"
                            HorizontalAlignment="Center" 
                            FontWeight="Bold" 
                            Style="{StaticResource cancel}"/>
                    <!--Remove-->
                    <Button Click="RemoveProduct" 
                            Grid.Column="1"
                            Content="Remove" 
                            HorizontalAlignment="Center" 
                            FontWeight="Bold" 
                            Style="{StaticResource updateEmp}"/>
                    <!--Update-->
                    <Button  Click="UpdateProduct" 
                             Grid.Column="2" 
                             Content="Update"
                             HorizontalAlignment="Center" 
                             FontWeight="Bold"
                             Style="{StaticResource updateEmp}"/>

                </Grid>
                <!--End of grid having emoji backgournd -->

            </StackPanel>
        </Grid>
    </Border>
</Window>
