<Page x:Class="Nemo.Manager.employees"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nemo.Manager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="employees">

    <Border Background="{StaticResource WordBlueBrush}" Margin="14">
        <Grid >
            <Grid.Background>
                <ImageBrush TileMode="Tile" ViewportUnits="Absolute" Viewport="0 0 500 500" ImageSource="/Images/Backgrounds/emoji-background.png" />
            </Grid.Background>

            <DataGrid Margin="14 14 14 14" Background="Transparent" Foreground="Black">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name " FontSize="20" Width="*" Foreground="White" />
                    <DataGridTextColumn Header="Salary" Width="*"/>
                    <DataGridTextColumn Header="Birth date " Width="*"/>
                </DataGrid.Columns>
                
            </DataGrid>
            
            
            
        </Grid>

    </Border>
</Page>
